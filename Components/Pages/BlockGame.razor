@page "/blockgame"
@inject NavigationManager Navigation

<h3>Block Game</h3>

<div class="grid">
    <div id="square1" class="square @(IsSquareLit(1) ? "light" : "") @(IsSquareClicked(1) ? "pressed" : "")" @onclick="() => OnPlayerClick(1)">1</div>
    <div id="square2" class="square @(IsSquareLit(2) ? "light" : "") @(IsSquareClicked(2) ? "pressed" : "")" @onclick="() => OnPlayerClick(2)">2</div>
    <div id="square3" class="square @(IsSquareLit(3) ? "light" : "") @(IsSquareClicked(3) ? "pressed" : "")" @onclick="() => OnPlayerClick(3)">3</div>
    <div id="square4" class="square @(IsSquareLit(4) ? "light" : "") @(IsSquareClicked(4) ? "pressed" : "")" @onclick="() => OnPlayerClick(4)">4</div>
</div>

<button @onclick="StartNewRound">Start New Round</button>
<p>@statusMessage</p>

<style>
    .grid {
        display: grid;
        grid-template-columns: repeat(2, 100px); /* Creates a grid of 2 columns */
        gap: 20px; /* Space between grid items */
        justify-content: center;
        margin-top: 50px;
    }

    .square {
        width: 100px;
        height: 100px;
        background-color: lightgray;
        border: 2px solid black;
        display: flex;
        justify-content: center;
        align-items: center;
        font-size: 2rem;
        cursor: pointer;
    }

    .light {
        background-color: yellow;
    }

    .pressed {
        background-color: red;
    }

    button {
        display: block;
        margin: 20px auto;
        padding: 10px 20px;
        font-size: 1rem;
    }
</style>
